    // ===== NUEVO: limpia lista de scans dejando solo últimos 60s =====
    void PruneScans()
    {
        DateTime limite = DateTime.Now.AddSeconds(-VENTANA_SEGUNDOS);
        // remove old
        for (int i = scans.Count - 1; i >= 0; i--)
            if (scans[i] < limite) scans.RemoveAt(i);
    }

    // ===== NUEVO: CPM último minuto + estimado fin de hora =====
    void ActualizarMetricas()
    {
        PruneScans();

        double cpm = scans.Count; // porque la ventana es exactamente 60s
        // si cambias VENTANA_SEGUNDOS a otro valor:
        // double cpm = scans.Count * (60.0 / VENTANA_SEGUNDOS);

        DateTime ahora = DateTime.Now;
        DateTime finHora = new DateTime(ahora.Year, ahora.Month, ahora.Day, ahora.Hour, 0, 0).AddHours(1);
        double minsRest = (finHora - ahora).TotalMinutes;
        if (minsRest < 0) minsRest = 0;

        int estimadoFinHora = contador + (int)Math.Round(cpm * minsRest);

        lblRate.Text = "CPM(60s): " + cpm.ToString("0.0") + " | Est: " + estimadoFinHora.ToString();
    }

